{% extends 'base.html.twig' %}

{% block title %}Prueba | Tabla pedidos{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('static/css/datatables.css') }}">
{% endblock %}

{% block body %}


    <main class=" mb-5 px-5 mx-5">

        <div class="row">

            <div class="col-12">
                <h1 class="text-center">Tabla Pedidos</h1>
                <form class="form-inline mt-5" id="form_datatable" data-path="{{ path('get_pedidos') }}">
                    <div class="form-group mr-4">
                        <label for="inlineFormInputName2" class="mr-2">Fecha: </label>
                        <input type="text" id="datepicker">
                    </div>
                    <div class="form-group mr-4">

                        <label for="inlineFormInputName2" class="mr-2">Código postal</label>
                        <input type="number" value="33133" class="form-control  mr-sm-2 only-numeric"  id="codigo_postal">
                    </div>

                    <div class="form-group mr-4">

                        <label class="my-1 mr-2" for="inlineFormCustomSelectPref">Estado:</label>
                        <select class="custom-select my-1 mr-sm-2" id="estado">
                            <option selected value="">Todos</option>
                            {% for key,row in estados %}
                                <option value="{{ key }}">{{ row }}</option>
                            {% endfor %}

                        </select>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary " style="width: 100px">Buscar</button>

                    </div>

                </form>


            </div>

        </div>
        <div class="d-flex justify-content-center mt-5">

            <div class="spinner-border" id="spinner" style="display:none;" role="status">
                <span class="sr-only">Loading...</span>
            </div>
        </div>

        {# PRODUCT CARD #}
        <table id="tabla" class="display mb-2" style="width:100%; display:none">
            <thead>
            <tr>
                <th>ID Pedido</th>
                <th>Nombre Destinatario</th>
                <th>C.P Destino</th>
                <th>País Destino</th>
                <th>Producto</th>
                <th>Precio Producto</th>
                <th>Cantidad</th>
                <th>Precio total</th>
                <th>Estado</th>
                <th>Fecha creación</th>
            </tr>
            </thead>

        </table>
        {#- ------   -#}

    </main>
{% endblock %}


{% block javascripts %}
    <script src="{{ asset('static/js/datatables.js') }}"></script>
    <script src="{{ asset('static/js/tabla_pedidos.js') }}"></script>
{% endblock %}
